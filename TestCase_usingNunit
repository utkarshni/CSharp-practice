using NUnit.Framework;
using System;

[TestFixture]   // 1) Required test attribute for class
public class UnitTest
{
    [Test]   // 2) Required test attribute
    public void Test_Deposit_ValidAmount()
    {
        // Arrange
        Program account = new Program(100m);

        // Act
        account.Deposit(50m);

        // Assert (only ONE assert)
        Assert.AreEqual(150m, account.Balance);
    }

    [Test]
    public void Test_Deposit_NegativeAmount()
    {
        // Arrange
        Program account = new Program(100m);

        // Act & Assert (single assert)
        Assert.AreEqual(
            "Deposit amount cannot be negative",
            Assert.Throws<Exception>(() => account.Deposit(-50m))!.Message
        );
    }

    [Test]
    public void Test_Withdraw_ValidAmount()
    {
        // Arrange
        Program account = new Program(200m);

        // Act
        account.Withdraw(50m);

        // Assert
        Assert.AreEqual(150m, account.Balance);
    }

    [Test]
    public void Test_Withdraw_InsufficientFunds()
    {
        // Arrange
        Program account = new Program(100m);

        // Act & Assert
        Assert.AreEqual(
            "Insufficient funds.",
            Assert.Throws<Exception>(() => account.Withdraw(200m))!.Message
        );
    }
}
